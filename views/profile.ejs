<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Homepage</title>
        <style>
            body{
                font-family: arial;
                margin: 0;
            }
            nav{
                background: #3a46c5;
                padding: 20px 10px;
            }
            nav ul{
                max-width: 960px;
                margin: 0 auto;
                padding: 0;
            }
            nav li{
                list-style-type: none;
                display: inline-block;
                margin: 0 10px 0 0;
            }
            nav a{
                color: #fff;
                font-size: 18px;
                background: rgba(255,255,255,0.2);
                text-decoration: none;
                padding: 10px;
                display: block;
            }
            main, header{
                max-width: 960px;
                margin: 30px auto;
                padding: 0 10px;
                color: #333;
            }
            main img{
                width: 40px;
                margin-right: 10px;
                position: relative;
                top: 12px;
            }
            main p{
                display: inline-block;
            }
        </style>        
    </head>
    
    
    <body>
        <nav>
            <ul>
               
                <li><a href="/logout">Log out</a></li>           
                
                               
                <li><a href="/profile">Profile</a></li>
            </ul>
        </nav>
        <header>
            <h1>Welcome to your profile, <%= user %></h1> 
            
            <%task.forEach((element) => { %>
                <%console.log(element)%>
                <li><%=element.description%></li>
                <%element._id%>
                <form method="delete" action=<%= "tasks/"+element._id %> name="hello">                
                    <input type="submit" value="Delete" />
                </form>
            <% })%>

            <form method="post" action="/profile/add" name="hello">                
                <input type="text" id="add" name="add" placeholder="Add a new task"><br>
                <input type="submit" value="ADD" />
            </form>
            
        </header>     
        
        
    </body>
</html>
